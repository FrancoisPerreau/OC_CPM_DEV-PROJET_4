{# src/CL/TicketingBundle/Resources/views/Ticketing/form/contactForm.html.twig #}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{{ form_start(form) }}

  {{ form_errors(form) }}

  <div class="form-group text-left">
    {{ form_label(form.firstname) }}
    {{ form_widget(form.firstname, { 'value': '' }) }}
  </div>

  <div class="form-group text-left">
    {{ form_label(form.lastname) }}
    {{ form_widget(form.lastname, { 'value': '' }) }}
  </div>

  <div class="form-group text-left">
    {{ form_label(form.email) }}
    {{ form_widget(form.email, { 'value': '' }) }}
  </div>

  <div class="form-group text-left">
    {{ form_label(form.subject) }}
    {{ form_widget(form.subject, { 'value': '' }) }}
  </div>

  <div class="form-group text-left">

    {{ form_widget(form.message, { 'value': '' }) }}
  </div>


  <div class="form-group">
    <button class="btn btn-info" type="submit">Envoyez</button>
  </div>

  {{ form_rest(form) }}
{{ form_end(form) }}
